@model MyFirstMvc.Models.Weather

@{
    ViewBag.Title = "Weather";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Weather</h2>

<body>
<div>
    <h1>Current Weather</h1>

    <table>
        <tr>
            <td>
                <strong>Date</strong>
            </td>
            <td>@Model.Date.ToShortDateString()</td>
        </tr>
        <tr>
            <td>
                <strong>High</strong>
            </td>
            <td>@Model.High</td>
        </tr>
        <tr>
            <td>
                <strong>Low</strong>
            </td>
            <td>@Model.Low</td>
        </tr>
        <tr>
            <td>
                <strong>Description</strong>
            </td>
            <td>
                @if (Model.Description == "Sunny")
                {
                    <img src="@Href("~/Images/sunny.png")"/>
                }
                else if (Model.Description == "Cloudy")
                {
                    <img src="@Href("~/Images/cloudy.png")"/>
                }
                else if (Model.Description == "Thunderstorm")
                {
                    <img src="~/Images/thunderstorm.png"/>
                }
                else if (Model.Description == "Rainy")
                {
                    <img src="~/Images/rainy.png"/>
                }
                else
                {
                    <span>@Model.Description</span>
                }
            </td>
        </tr>
    </table>
</div>
</body>