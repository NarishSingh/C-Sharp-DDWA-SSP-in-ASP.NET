@model EmployeeMS.Models.ViewModels.AddEmplVM

@{
    ViewBag.Title = "Add Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Add Employee</h2>
    <div class="row">
        <div class="col-lg-4">
            @Html.ValidationSummary()
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            @using (Html.BeginForm("Add", "Employees", FormMethod.Post))
            {
                <div class="form-group">
                    <label>First Name</label>
                    @Html.TextBoxFor(m => m.FirstName, new {@class = "form-control"})
                </div>

                <div class="form-group">
                    <label>Last Name</label>
                    @Html.TextBoxFor(m => m.LastName, new {@class = "form-control"})
                </div>

                <div class="form-group">
                    <label>Phone</label>
                    @Html.TextBoxFor(m => m.PhoneNum, new {@class = "form-control"})
                </div>

                <div class="form-group">
                    <label>Department</label>
                    @Html.DropDownListFor(m => m.DeptId, Model.Departments, new {@class = "form-control"})
                </div>

                @Html.ActionLink("Cancel", "List", "Employees", null, new {@class = "btn btn-danger"})
                <button class="btn btn-success">Save</button>
            }
        </div>
    </div>
</div>