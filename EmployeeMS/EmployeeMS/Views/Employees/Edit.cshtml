@model EmployeeMS.Models.ViewModels.EditEmplVM

@{
    ViewBag.Title = "Edit Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Employee</h2>
<div class="row">
    <div class="col-lg-4">
        @Html.ValidationSummary()
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
        @using (Html.BeginForm("Edit", "Employees", FormMethod.Post))
        {
            // Hidden id for update
            @Html.HiddenFor(m => m.EmployeeId)
            
            <div class="form-group">
                <label>First Name</label>
                @Html.TextBoxFor(m => m.FirstName, new {@class = "form-control"})
            </div>

            <div class="form-group">
                <label>Last Name</label>
                @Html.TextBoxFor(m => m.LastName, new {@class = "form-control"})
            </div>

            <div class="form-group">
                <label>Phone</label>
                @Html.TextBoxFor(m => m.PhoneNum, new {@class = "form-control"})
            </div>

            <div class="form-group">
                <label>Department</label>
                @Html.DropDownListFor(m => m.DeptId, Model.Departments, new {@class = "form-control"})
            </div>

            @Html.ActionLink("Cancel", "List", "Employees", null, new {@class = "btn btn-danger"})
            <button class="btn btn-success">Save</button>
        }
    </div>
</div>